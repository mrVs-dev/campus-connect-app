rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all access.
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow any authenticated user to read and write to all collections.
    // This is a secure starting point. We can refine this further later.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
