
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read access to essential collections for any authenticated user
    // This helps prevent race conditions on initial app load.
    function isAuthenticated() {
      return request.auth != null;
    }

    match /teachers/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Simplified for now
    }

    match /settings/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Simplified for now
    }
    
    match /students/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Simplified for now
    }

    match /admissions/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Simplified for now
    }
    
    match /assessments/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Simplified for now
    }
    
    match /student_status_history/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Simplified for now
    }

    match /fees/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Simplified for now
    }
    
    match /invoices/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Simplified for now
    }
    
    match /inventory/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Simplified for now
    }
    
    match /users/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Simplified for now
    }

    // Default deny for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
