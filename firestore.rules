
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all collections for any authenticated user
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Default deny writes
    }

    // Allow users to be created on sign-in
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
    }
    
    // Allow admin to write to settings
    match /settings/{setting} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && get(/databases/$(database)/documents/teachers/$(request.auth.uid)).data.role == 'Admin';
    }

    // Allow teachers to write to their assigned data
    match /assessments/{assessmentId} {
        allow read: if request.auth != null;
        allow create, update: if request.auth.uid in resource.data.teacherIds;
    }

    match /attendance/{attendanceId} {
        allow read: if request.auth != null;
        allow create, update: if request.auth.uid == resource.data.recordedById;
    }
  }
}
