
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Super Admin Rule: Grants full access to the specified admin email ---
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.email == 'vannak@api-school.com';
    }

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    // --- Collection Rules ---

    // Allow full read/write for the super admin on all collections.
    // For other users, allow read-only access to prevent initial load errors.
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }
    
    // Fallback for general authenticated users: allow reads on most collections.
    // This helps prevent the race condition errors during initial load for any user.
    match /students/{studentId} {
      allow read: if isSignedIn();
    }
    
    match /teachers/{teacherId} {
      allow read: if isSignedIn();
    }
    
    match /admissions/{admissionId} {
      allow read: if isSignedIn();
    }
    
    match /assessments/{assessmentId} {
      allow read: if isSignedIn();
    }

    match /settings/{settingId} {
      allow read: if isSignedIn();
    }

    match /student_status_history/{historyId} {
      allow read: if isSignedIn();
    }

    match /fees/{feeId} {
        allow read: if isSignedIn();
    }
    
    match /invoices/{invoiceId} {
        allow read: if isSignedIn();
    }

    match /inventory/{itemId} {
        allow read: if isSignedIn();
    }

    match /users/{userId} {
      allow read, create: if isSignedIn();
    }
  }
}
