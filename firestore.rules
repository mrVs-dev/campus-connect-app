
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user authentication and roles
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isSuperAdmin() {
      return request.auth.token.email == "vannak@api-school.com";
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    // --- Global Read/Write Rules ---
    // By default, no one can read or write to any document.
    // Specific rules below will grant access.
    match /{document=**} {
      allow read, write: if false;
    }

    // --- Collection-Specific Rules ---

    // Allow any authenticated user to read data needed for the app to load.
    // This prevents race-condition errors on initial page load.
    // Write access is still restricted.
    match /students/{studentId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin(); // Or more granular roles
    }

    match /teachers/{teacherId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }
    
    match /admissions/{admissionId} {
        allow read: if isAuthenticated();
        allow write: if isSuperAdmin();
    }

    match /assessments/{assessmentId} {
        allow read: if isAuthenticated();
        allow write: if isSuperAdmin() || isAuthenticated(); // Allow teachers to write
    }

    match /student_status_history/{historyId} {
        allow read: if isAuthenticated();
        allow write: if isSuperAdmin();
    }

    match /fees/{feeId} {
        allow read: if isAuthenticated();
        allow write: if isSuperAdmin();
    }
    
    match /invoices/{invoiceId} {
        allow read: if isAuthenticated();
        allow write: if isSuperAdmin();
    }

    match /inventory/{itemId} {
        allow read: if isAuthenticated();
        allow write: if isSuperAdmin();
    }
    
    match /users/{userId} {
        allow read: if isAuthenticated();
        // Only allow a user to create their own user document upon first sign-in
        allow create: if isOwner(userId);
    }
    
    match /fcmTokens/{token} {
        allow write: if isAuthenticated();
    }
    
    match /attendance/{attendanceId} {
        allow read, write: if isAuthenticated();
    }

    // --- Settings Document Rules ---
    // The settings collection contains single documents for different settings.
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }

    // --- Metadata Rule ---
    // This is for the student ID counter, which needs transactional security.
    match /metadata/studentCounter {
      allow read, write: if isAuthenticated(); // Allow any authenticated user to trigger a transaction
    }
  }
}
