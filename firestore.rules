
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    match /students/{studentId} {
      allow read, write: if request.auth != null;
    }
    match /teachers/{teacherId} {
      allow read, write: if request.auth != null;
    }
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
  }
}
