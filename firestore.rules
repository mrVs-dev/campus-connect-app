rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSuperAdmin() {
      return request.auth.token.email == "vannak@api-school.com";
    }

    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Catch-all for most collections: Deny by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow any authenticated user to read initial app data to prevent race conditions.
    // Write access is still protected.
    match /teachers/{teacherId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin(); // Or more specific rules
    }

    match /settings/{settingId} {
        allow read: if isAuthenticated();
        allow write: if isSuperAdmin(); // Or more specific rules
    }

    match /students/{studentId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated(); // More granular rules can be added
    }

    match /admissions/{admissionId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
    }
    
    // Other collections can have more specific rules
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /student_status_history/{historyId} {
      allow read, write: if isAuthenticated();
    }
    
    match /assessments/{assessmentId} {
       allow read, write: if isAuthenticated();
    }

    match /attendance/{attendanceId} {
      allow read, write: if isAuthenticated();
    }
    
    match /fees/{feeId} {
      allow read, write: if isAuthenticated();
    }

    match /invoices/{invoiceId} {
      allow read, write: if isAuthenticated();
    }

    match /inventory/{itemId} {
      allow read, write: if isAuthenticated();
    }
    
    match /fcmTokens/{token} {
      allow read, write: if isAuthenticated();
    }

    match /metadata/{docId} {
      allow read, write: if isAuthenticated();
    }
  }
}