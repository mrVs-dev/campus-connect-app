rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Super Admin: Full access to everything
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.email == 'vannak@api-school.com';
    }

    // This is the blanket rule that grants the super admin full access.
    // It will be checked first. If the user is the super admin, all
    // other rules below are effectively ignored for them.
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // --- General Authenticated Access ---
    // Allow any logged-in user to read collections needed for the app to function.
    // This helps prevent race conditions on initial load for all users.
    match /students/{studentId} {
      allow read: if request.auth != null;
      allow write: if false; // More specific rules below
    }

    match /admissions/{admissionId} {
        allow read: if request.auth != null;
        allow write: if false;
    }
    
    match /teachers/{teacherId} {
        allow read: if request.auth != null;
        allow write: if false;
    }

    match /settings/{settingId} {
        allow read: if request.auth != null;
        allow write: if false;
    }
    
    match /assessments/{assessmentId} {
        allow read: if request.auth != null;
        allow write: if false;
    }
    
    match /student_status_history/{historyId} {
        allow read: if request.auth != null;
        allow write: if false;
    }
    
    match /fees/{feeId} {
        allow read: if request.auth != null;
        allow write: if false;
    }

    match /invoices/{invoiceId} {
        allow read: if request.auth != null;
        allow write: if false;
    }
    
    match /inventory/{itemId} {
        allow read: if request.auth != null;
        allow write: if false;
    }
    
    match /users/{userId} {
        allow read: if request.auth != null;
        allow write: if false;
    }

    // Fallback: By default, no one can access any other collections
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
