rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Super Admin: The user with this email has unconditional read/write access to everything.
    function isSuperAdmin() {
      return request.auth.token.email == 'vannak@api-school.com';
    }

    // Default authenticated users can read most collections to allow the app to load.
    // Write access is more restricted.
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // Allow any authenticated user to read from these collections.
    // This prevents race-condition errors on initial app load.
    match /students/{studentId} {
      allow read: if request.auth != null;
    }
    match /admissions/{admissionId} {
      allow read: if request.auth != null;
    }
    match /assessments/{assessmentId} {
      allow read: if request.auth != null;
    }
    match /teachers/{teacherId} {
        allow read: if request.auth != null;
    }
     match /student_status_history/{historyId} {
      allow read: if request.auth != null;
    }
    match /fees/{feeId} {
        allow read: if request.auth != null;
    }
    match /invoices/{invoiceId} {
        allow read: if request.auth != null;
    }
    match /inventory/{itemId} {
        allow read: if request.auth != null;
    }
    match /users/{userId} {
        allow read: if request.auth != null;
    }
    match /settings/{settingId} {
      allow read: if request.auth != null;
    }
    match /metadata/{docId} {
      allow read, write: if request.auth != null;
    }

  }
}
